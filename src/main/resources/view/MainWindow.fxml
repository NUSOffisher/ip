<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="600.0" prefWidth="400.0"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tigger.MainWindow"
            stylesheets="@tigger.css">
    <children>
        <TextField fx:id="userInput"
                   onAction="#handleUserInput"
                   prefHeight="41.0"
                   AnchorPane.leftAnchor="8.0"
                   AnchorPane.rightAnchor="88.0"
                   AnchorPane.bottomAnchor="8.0" />
        <Button fx:id="sendButton"
                mnemonicParsing="false"
                onAction="#handleUserInput"
                prefHeight="41.0"
                prefWidth="76.0"
                text="Bounce!"
                AnchorPane.rightAnchor="8.0"
                AnchorPane.bottomAnchor="8.0" />
        <ScrollPane fx:id="scrollPane"
                    hbarPolicy="NEVER"
                    vvalue="1.0"
                    AnchorPane.topAnchor="8.0"
                    AnchorPane.leftAnchor="8.0"
                    AnchorPane.rightAnchor="8.0"
                    AnchorPane.bottomAnchor="56.0">
            <content>
                <VBox fx:id="dialogContainer"
                      spacing="10"
                      styleClass="main-background" />
            </content>
        </ScrollPane>
    </children>
</AnchorPane>
